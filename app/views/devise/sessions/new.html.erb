<div class="container">
  <div class="row">
    <div class="mx-auto col-10 col-sm-10 col-lg-8 col-xl-6 p-5">
      <h2>Log in</h2>
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName" %>
      </div>
      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword" %>
      </div>
      <div class="actions">
        <%= f.submit "Log in", class:"btn btn-success" %>
      </div>
      <% end %>
      <%= link_to "Sign up", new_user_registration_path %>
    </div>
  </div>
</div>

