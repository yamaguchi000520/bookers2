<div id="notice">
  <%= flash[:notice] %>
</div>

<div class="container p-3 px-5 px-sm-0">
  <%= render 'books/list', book: @book, user: @user %>
    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
             <th></th>
          </tr>
         </thead>

        <tbody>
          <tr>
          <% @books.each do |book| %>
            <td>

              <%= image_tag book.user.get_profile_image(100,100) %>
            </td>
            <td><%= book.user.name %></td>
            <td><%= link_to "Show", user_path(book.user) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>