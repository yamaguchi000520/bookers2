
<div class="container p-5">
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %>error prohidited this book from being sabed:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  <div class="row">
    <div class="col-12 col-sm-8 px-ms-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user, url:user_path(@user.id), method: :patch do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label><br>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"inputName"%>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label><br>
          <%= f.file_field :profile_image, placeholder: "inputImage", accept: "image/*" %>
        </div>
        <div class="form-group">
          <label for="inputIntroduction">Introduction</label><br>
          <%= f.text_area :introduction, autofocus: true, id:"user_introduction", placeholder:"inputIntroduction"%><br>
          <%= f.submit "Update User" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
