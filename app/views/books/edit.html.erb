<div id="notice">
  <%= flash[:notice] %>
</div>

<div class="container p-5">
  <% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>error prohidited this book from being sabed:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="row">
    <div class="col-8 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>
      <div class="form-group">
        <%= f.label :Title %>
        <%= f.text_field:title, class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :Opinion %>
        <%= f.text_area:body, class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit 'Update Book', class:"btn btn-lg btn-block btn-success" %>
      </div>
      <% end %>
    <%= link_to "Show", book_path %> |
    <%= link_to "Back", books_path %>
    </div>
  </div>
</div>