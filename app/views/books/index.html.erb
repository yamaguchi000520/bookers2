<div id="notice">
  <%= flash[:notice] %>
</div>

<div class="container">
  <% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>error prohidited this book from being sabed:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <div class="row">
  <%= render 'list', books: @books %>
    <div class='col-md-9 offset-md-1'>
      <h2>Books</h2>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Body</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <tr>
          <% @books.last(14).each do |book| %>
            <td><%= book.user.id.image %><br><%= @book.user_id %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Edit", edit_book_path(book.id) %></td>
            <td class="btn btn-"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

</div>
  </div>
</div>