<% if book.errors.any? %>
  <div id="error_explanation">
    <h2><%= book.errors.count %>error prohidited this book from being sabed:</h2>
    <ul>
      <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
  <div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100), class:"mt-3" %>
  <table class="table table-sm">
    <thead>
      <th></th>
      <th></th>
    </thead>
    <tbody>
      <tr>
        <td>name</td>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= user.introduction %></td>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <div class="mx-auto">
      <%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    </div>
  </div>

  <div class="row mt-1">
    <h3 class="mx-auto">New book</h3>
  </div>

  <div class="row mx-auto">
  <%= form_with model:book, url:'/books', method: :post do |f| %>
    <div class="form-group">
      <%= f.label :Title %>
      <%= f.text_field:title, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :Opinion %>
      <%= f.text_area:body, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit 'Create Book', class:"btn btn-lg btn-block btn-success" %>
    </div>
  <% end %>
  </div>
</div>